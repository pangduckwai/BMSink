<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:focusable="true"
		android:focusableInTouchMode="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/details_main"
		tools:context=".details.BookmarkDetails"
		android:background="@android:color/darker_gray">

	<TextView
			android:id="@+id/title_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="0dp"
			android:layout_marginEnd="@dimen/margin_normal"
			android:layout_marginStart="@dimen/margin_normal"
			android:layout_marginTop="@dimen/fab_margin"
			android:padding="@dimen/margin_narrow"
			android:textSize="@dimen/text_medium"
			android:text="@string/hint_title"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/margin_normal"
			android:padding="@dimen/margin_normal"
			android:textStyle="bold"
			android:textSize="@dimen/text_medium"
			android:lines="4"
			android:background="@color/colorSelect"
			android:elevation="@dimen/margin_narrow"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/title_label"/>

	<TextView
			android:id="@+id/url_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="0dp"
			android:layout_marginEnd="@dimen/margin_normal"
			android:layout_marginStart="@dimen/margin_normal"
			android:layout_marginTop="@dimen/fab_margin"
			android:padding="@dimen/margin_narrow"
			android:textSize="@dimen/text_medium"
			android:text="@string/hint_url"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/title"/>

	<TextView
			android:id="@+id/url"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/margin_normal"
			android:padding="@dimen/margin_normal"
			android:textSize="@dimen/text_medium"
			android:lines="8"
			android:background="@color/colorSelect"
			android:elevation="@dimen/margin_narrow"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/url_label"/>

	<ImageButton
			android:id="@+id/bttn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/margin_normal"
			android:layout_marginStart="@dimen/margin_narrow"
			android:layout_marginTop="@dimen/fab_margin"
			android:contentDescription="@string/ctn_add"
			android:minWidth="0dp"
			android:minHeight="0dp"
			android:padding="0dp"
			android:background="?android:attr/selectableItemBackground"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/url"
			app:srcCompat="@android:drawable/ic_input_add"/>

	<EditText
			android:id="@+id/tag"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/margin_narrow"
			android:layout_marginStart="@dimen/margin_normal"
			android:layout_marginTop="@dimen/fab_margin"
			android:padding="@dimen/margin_normal"
			android:ems="10"
			android:hint="@string/hint_tag"
			android:inputType="textPersonName"
			android:textSize="@dimen/text_medium"
			app:layout_constraintEnd_toStartOf="@+id/bttn"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/url"/>

	<android.support.v7.widget.RecyclerView
			android:id="@+id/tags"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:minHeight="350dp"
			android:layout_margin="@dimen/margin_narrow"
			android:padding="@dimen/margin_narrow"
			android:background="@android:color/background_light"
			android:elevation="@dimen/margin_narrow"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tag"/>
</android.support.constraint.ConstraintLayout>